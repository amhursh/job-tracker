<h1><strong><%= @company.name %></strong></h1>

<h4>All jobs at this company:</h4>
<% @company.jobs.each do |job| %>
  <ul><%= link_to job.title, company_job_path(@company, job) %> at <%= job.company.name %></ul>
<% end %>

<%= link_to "New Job", new_company_job_path(@company) %>

<h4>Contacts:</h4>
<%= render partial: 'companies/contact', collection: @company.contacts %>
<%= render partial: 'contacts/form' %>
